# ===== MUNDO LIMPIO THEME - CONFIGURACIÓN DE ENTORNO =====

# Entorno de desarrollo
NODE_ENV=development

# Configuración del tema
THEME_DEBUG=true
THEME_VERSION=1.0.0

# CSS Configuration
CSS_MINIFY=false
CSS_SOURCEMAP=true

# JavaScript Configuration
JS_MINIFY=false
JS_SOURCEMAP=true

# Imágenes
IMAGES_OPTIMIZE=false
IMAGES_WEBP=true

# Performance
ENABLE_CACHE=false
CACHE_DURATION=3600

# SEO
SEO_ENABLE_SCHEMA=true
SEO_ENABLE_OG=true

# Analytics (opcional)
GA_TRACKING_ID=
FB_PIXEL_ID=
GTM_ID=

# Configuración de empresa
COMPANY_NAME="Mundo Limpio"
COMPANY_EMAIL="info@mundolimpio.com"
COMPANY_PHONE="+54 9 3764 12-3456"
COMPANY_ADDRESS="Posadas, Misiones, Argentina"

# Redes sociales
FACEBOOK_URL="https://facebook.com/mundolimpio"
INSTAGRAM_URL="https://instagram.com/mundolimpio"
WHATSAPP_NUMBER="+5493764123456"
LINKEDIN_URL="https://linkedin.com/company/mundolimpio"

# Configuración de colores (opcional)
PRIMARY_COLOR="#16a34a"
PRIMARY_LIGHT="#22c55e"
PRIMARY_DARK="#15803d"
ACCENT_COLOR="#f59e0b"

# URLs importantes
CONTACT_URL="/contacto"
CATEGORIES_URL="/categoria"
ABOUT_URL="/sobre-nosotros"
BLOG_URL="/blog"

# Newsletter
NEWSLETTER_ENABLE=true
NEWSLETTER_API_URL=""

# Configuración de desarrollo
DEV_SERVER_PORT=3000
WATCH_MODE=true
HOT_RELOAD=true